# Active Environment
# =====================
ACTIVE_ENVIRONMENT=development  # Set to 'development', 'preview', or 'production'

# =====================
# Development Settings
# =====================
DEV_CLIENT_ID=your_dev_client_id
DEV_CLIENT_SECRET=your_dev_client_secret
DEV_REDIRECT_URI=http://localhost:5000/callback
DEV_WEBSOCKET_URL=wss://ws.zoom.us/ws?subscriptionId=your_dev_subscription_id
DEV_HOME_URL=your_dev_home_url

# =====================
# Preview Settings
# =====================
PREVIEW_CLIENT_ID=your_preview_client_id
PREVIEW_CLIENT_SECRET=your_preview_client_secret
PREVIEW_REDIRECT_URI=your_preview_redirect_uri
PREVIEW_WEBSOCKET_URL=your_preview_websocket_url
PREVIEW_HOME_URL=your_preview_home_url

# =====================
# Production Settings
# =====================
PROD_CLIENT_ID=your_prod_client_id
PROD_CLIENT_SECRET=your_prod_client_secret
PROD_REDIRECT_URI=https://your.production.domain/oauth/callback
PROD_WEBSOCKET_URL=wss://ws.zoom.us/ws?subscriptionId=your_prod_subscription_id
PROD_HOME_URL=https://your.production.domain